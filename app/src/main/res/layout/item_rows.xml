<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <TextView
        android:id="@+id/item_no"
        android:text="12/10/1200"
        android:padding="5dp"
        android:drawableLeft="@drawable/product_box_28"
        android:drawableTint="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
         />

    <TextView
        android:id="@+id/item_name"
        android:text="Bayu Kabisat"
        android:padding="5dp"
        android:drawableLeft="@drawable/product_box_2_28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_no"
        android:drawablePadding="10dp"
        android:layout_marginTop="1dip"
        />

    <TextView
        android:id="@+id/category_name"
        android:text="Bayu Kabisat"
        android:drawableLeft="@drawable/category_28"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_name"
        android:drawablePadding="10dp"
        android:layout_marginTop="1dip"
         />

    <TextView
        android:id="@+id/quantity"
        android:text="12"
        android:drawableLeft="@drawable/scales_28"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/category_name"
        android:drawablePadding="10dp"
        android:layout_marginTop="1dip"
        />

    <TextView
        android:id="@+id/message_warning"
        android:text="12"
        android:drawableLeft="@drawable/warning_28"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quantity"
        android:drawablePadding="10dp"
        android:layout_marginTop="1dip"
        />



</RelativeLayout>

